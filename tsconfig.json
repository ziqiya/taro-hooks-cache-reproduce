{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "include": ["./src", "global.d.ts"],
  "exclude": [
    "node_modules",
    "**/*.(spec|test).ts?(x)",
    "build",
    "dist",
    "lib",
    "__tests__",
    "__mocks__",
  ],
  "compileOnSave": false
}
